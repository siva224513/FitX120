<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorOnBackground"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/streakSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/streakTitle"
            style="@style/ProfileSectionText"
            android:gravity="center_horizontal"
            android:layout_width="0dp"

            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/personal_information"
            android:textAllCaps="true" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/weight_tracker_card"
            android:divider="?android:attr/dividerHorizontal"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:showDividers="middle">


            <include
                android:id="@+id/item_name"
                layout="@layout/item_user_detail_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                />

            <include
                android:id="@+id/item_email"
                layout="@layout/item_user_detail_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
              />


            <include
                android:id="@+id/item_age"
                layout="@layout/item_user_detail_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
               />

            <include
                android:id="@+id/item_gender"
                layout="@layout/item_user_detail_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                />

            <include
                android:id="@+id/item_height"
                layout="@layout/item_user_detail_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                />

            <include
                android:id="@+id/item_current_weight"
                layout="@layout/item_user_detail_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                />

            <include
                android:id="@+id/item_target_weight"
                layout="@layout/item_user_detail_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:tag="Target Weight" />

            <include
                android:id="@+id/item_plan"
                layout="@layout/item_user_detail_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
               />

            <include
                android:id="@+id/item_start_date"
                layout="@layout/item_user_detail_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
