<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mealTrackerCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/meal_tracker_card"
    android:elevation="6dp"
    android:padding="15dp">


    <TextView
        android:id="@+id/tvMealName"
        style="@style/MealCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Dinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCalories"
        style="@style/MealCardCalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="100 kcal"
        app:layout_constraintEnd_toStartOf="@+id/btnAddMeal"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toEndOf="@+id/tvMealName"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnAddMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_macro_background"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:src="@drawable/outline_add_box_24"
        app:layout_constraintBottom_toTopOf="@+id/tvCarbsLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <TextView
        android:id="@+id/tvProteinLabel"
        style="@style/MealCardMacroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Protein:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMealName" />

    <TextView
        android:id="@+id/tvProteinValue"
        style="@style/MealCardMacroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="0.00g"
        app:layout_constraintStart_toEndOf="@id/tvProteinLabel"
        app:layout_constraintTop_toTopOf="@id/tvProteinLabel" />

    <TextView
        android:id="@+id/tvCarbsLabel"
        style="@style/MealCardMacroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbs:"
        app:layout_constraintStart_toStartOf="@id/tvFiberLabel"
        app:layout_constraintTop_toTopOf="@id/tvProteinLabel" />

    <TextView
        android:id="@+id/tvCarbsValue"
        style="@style/MealCardMacroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="0.00g"
        app:layout_constraintStart_toEndOf="@id/tvCarbsLabel"
        app:layout_constraintTop_toTopOf="@id/tvCarbsLabel" />


    <TextView
        android:id="@+id/tvFatLabel"
        style="@style/MealCardMacroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="Fat:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvProteinLabel" />

    <TextView
        android:id="@+id/tvFatValue"
        style="@style/MealCardMacroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:text="0.00g"
        app:layout_constraintStart_toEndOf="@id/tvFatLabel"
        app:layout_constraintTop_toTopOf="@id/tvFatLabel" />

    <TextView
        android:id="@+id/tvFiberLabel"
        style="@style/MealCardMacroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="204dp"
        android:text="Fiber:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvFatLabel" />


    <TextView
        android:id="@+id/tvFiberValue"
        style="@style/MealCardMacroText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0.00g"
        app:layout_constraintStart_toEndOf="@id/tvFiberLabel"
        app:layout_constraintTop_toTopOf="@id/tvFiberLabel" />

    <LinearLayout
        android:id="@+id/foodListContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/meal_food_container"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvFatLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMealFoods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
